<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
<link href="~/Content/custom.css" rel="stylesheet" />
@model Task_InfinityMesh.ViewModels.BlogVM

@{
    ViewBag.Title = "BlogManager";
}

<div>
    <h3>Blog Manager</h3>
</div>
<hr style="height:2px;border:none;color:#333;background-color:#333;" />

@using (Html.BeginForm("ValidateBlog","Home"))
{

    <div style="width:500px;">
        @Html.HiddenFor(model => model.UserId)

        <div class="input-Blog">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @style = "width:500px", placeholder = "Title" })
            @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" }) <br />
        </div>
        <div class="input-Blog">
            @Html.TextBoxFor(model => model.Summary, new { @class = "form-control", @style = "width:500px;height:70px;", placeholder = "Summary" })
            @Html.ValidationMessageFor(model => model.Summary, null, new { @class = "text-danger" }) <br />
        </div>
        <div class="input-Blog">
            @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @style = "width:500px;height:200px;", @value=""})
            @Html.ValidationMessageFor(model => model.Content, null, new { @class = "text-danger" }) <br />
        </div>
        <div class="input-Blog">
            <div class="inner-addon right-addon">
                <i class="glyphicon glyphicon-calendar"></i>
                <input type="datetime-local" class="form-control" value="@Model.PublishDate.ToString("yyyy-mm-ddTHH:mm:ss")"  name="PublishDate">
                @Html.ValidationMessageFor(model => model.PublishDate, null, new { @class = "text-danger" }) <br />
            </div>
        </div>
        <div class="input-Blog">
            <input type="submit" class="btn btn-primary" />
        </div>

    </div>
}
